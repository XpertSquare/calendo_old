<div id="workspace" class="workspace">
	<div class="container">
		<%= form_for @account, :html => {:class => "form-horizontal", :role=>"form"} do |f| %>
		  <% if @account.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@account.errors.count, "error") %> prohibited this topic from being saved:</h2>
		      <ul>
		      <% @account.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
		
		  <div class="form-group">
		  	<%= f.label :name, :class=>"col-sm-2 control-label" %>
		  	<div class="col-sm-3">			    
		    	<%= f.text_field :name,  :class=>'form-control', :placeholder=>"Your company name" %>
		    </div>
		  </div>  
		  <div class="form-group">
		  	<%= f.label :user_name, "Your name", :class=>"col-sm-2 control-label" %>			
		  	<div class="col-sm-3">    
		    	<%= f.text_field :user_name,  :class=>'form-control', :placeholder=>"Your name" %>
		    </div>
		  </div>  			  
		  <div class="form-group">	
		  	<%= f.label :user_email, "Your email", :class=>"col-sm-2 control-label" %>	
		  	<div class="col-sm-3">	    
		    	<%= f.email_field :user_email,   :class=>'form-control', :placeholder=>"Your email" %>
		   </div>
		  </div>  			  
	
		<div class="form-group">	
		  	<%= f.label :time_zone, :class=>"col-sm-2 control-label" %>	
		  	<div class="col-sm-4">	    
		    	<%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, {default: "Pacific Time (US & Canada)"}, {:class=>"form-control"} %>
		    </div>
		 </div>	
			<%= f.submit 'Create my account', :class => 'btn btn-success' %>
			
		<% end %>
	</div>
</div>
