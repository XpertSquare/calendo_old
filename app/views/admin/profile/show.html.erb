<section style="padding:15px;">
	<header>
		<h3 style="margin-top:10px;">Profile: <%= @user.display_name %> 
		<%= link_to admin_edit_profile_path do %>
				<span  class="entity-action-link"><i class="fa fa-edit"></i> Edit my profile</span> 
