<%- title "Calendo | " + current_account.name + " - " + @service.name %>
<div id="workspace" class="workspace">
	<div class="container">
	<div class="sheet">
		<div class="row">
			<div class="col-sm-3">
				<section class="panel">
					<div class="panel-body">	
						<button id="btn-book" type="button" class="btn btn-success btn-compose" ><i class="fa fa-plus"></i>  New appointment</button>						
						<ul class="nav nav-pills nav-stacked mail-nav" style="margin-top:10px;">
							<li class="active"><a href="#"> <i class="fa fa-gear"></i> Settings</a></li>
							<li><a href="#"> <i class="fa fa-calendar"></i> Scheduled appointments</a></li>
						</ul>
					</div>
				</section>				
			</div>
			<div class="col-sm-9">
				<section class="panel">
					<header class="panel-body">
						<h2 style="margin-top:10px;"><%= @service.name %> 
							<%= link_to edit_admin_service_path(@service) do %>
								<span style="float:right; font-size:14px; margin-top:5px;"><i class="fa fa-edit"></i> Edit this service</span> 
							<% end %> 
							</h2>
						<hr style="margin-top:5px;"/>
						

						<div class="bs-callout bs-callout-info">
							<h4>Basic settings</h4>
							<div class="row" style="border-bottom: 1px solid #EDEDED; margin-left:-5px; margin-right:5px;">
								<div class="col-sm-3" style="text-align:right;" >		
									<label class="normal">Description:</label>
								</div>
								<div class="col-sm-9" >
									<label class="normal"><%= @service.description %></label>
								</div>
							</div>
							<div class="row" style="border-bottom: 1px solid #EDEDED; margin-left:-5px; margin-right:5px;">
								<div class="col-sm-3" style="text-align:right;" >		
									<label class="normal">Category:</label>
								</div>
								<div class="col-sm-9" >
									<label class="normal">Services</label>
								</div>
							</div>
							<div class="row" style="border-bottom: 1px solid #EDEDED; margin-left:-5px; margin-right:5px;">
								<div class="col-sm-3" style="text-align:right;" >		
									<label class="normal">Status:</label>
								</div>
								<div class="col-sm-9" >
									<label class="normal">Active</label>
								</div>
							</div>
							<div class="row" style="border-bottom: 1px solid #EDEDED; margin-left:-5px; margin-right:5px;">
								<div class="col-sm-3" style="text-align:right;" >		
									<label class="normal">Duration:</label>
								</div>
								<div class="col-sm-9" >
									<label class="normal"><%= @service.duration %> mins</label>
								</div>
							</div>
							<div class="row" style="border-bottom: 1px solid #EDEDED; margin-left:-5px; margin-right:5px;">
								<div class="col-sm-3" style="text-align:right;" >		
									<label class="normal">Price:</label>
								</div>
								<div class="col-sm-9" >
									<label class="normal"><%= number_to_currency(@service.price, precision: 2) %></label>
								</div>
							</div>
							<div class="row" style="border-bottom: 1px solid #EDEDED; margin-left:-5px; margin-right:5px;">
								<div class="col-sm-3" style="text-align:right;" >		
									<label class="normal">Booking:</label>
								</div>
								<div class="col-sm-9" >
									<label class="normal">Online</label>
								</div>
							</div>
							<div class="row">
								<div class="col-sm-3" style="text-align:right;" >		
									<label class="normal">Staff assigned:</label>
								</div>
								<div class="col-sm-9" >
									<label class="normal"><a href="#">William Bossard</a></label> | <label class="normal"><a href="#">Erica Burcham</a></label> | <label class="normal"><a href="#">Sasha Newsham</a></label>
								</div>
							</div>

						</div>
						
						<div class="bs-callout bs-callout-warning">
							<h4>Advanced settings</h4>
							<div class="row" style="border-bottom: 1px solid #EDEDED; margin-left:-5px; margin-right:5px;">
								<div class="col-sm-3" style="text-align:right;" >		
									<label class="normal">Reminder:</label>
								</div>
								<div class="col-sm-9" >
									<label class="normal">Email reminder is set for 1 day prior the service appointment</label>
								</div>
							</div>
							<div class="row" style="border-bottom: 1px solid #EDEDED; margin-left:-5px; margin-right:5px;">
								<div class="col-sm-3" style="text-align:right;" >		
									<label class="normal">Cancellation:</label>
								</div>
								<div class="col-sm-9" >
									<label class="normal">Clients can cancel up to 1 day prior the service appointment</label>
								</div>
							</div>
							
						</div>
						
						<div class="panel panel-default" style="margin-top:20px;">
							<div class="panel-heading">
								<i class="fa fa-calendar"></i>	Upcoming appointments for this service (next 3)
							</div>
							<div class="panel-body" style="padding: 0px;">
								<table class="table table-striped table-hover">
								  <tbody>
									<tr class="tr-appointment" style="cursor:pointer">
									  <td align="center"><div>Friday, Feb-20-2014</div><div style="color:#666666; font-weight:bold;">09:00 - 10:30</div></td>
									  <td><a href="customer-111.html">Mark Otto </a> (with <span>William Bossard</span>)</td>										  										  
									  <td><span class="label label-success">Confirmed</span></td>
									</tr>
									<tr class="tr-appointment" style="cursor:pointer">
									  <td align="center"><div>Tueday, Mar-22-2014</div><div style="color:#666666; font-weight:bold;">11:00 - 11:30</div></td>
									  <td><a href="#">Jane A. </a> (with Erica Burcham)</td>
									  <td><span class="label label-warning">Not confirmed</span></td>
									</tr>
									<tr class="tr-appointment" style="cursor:pointer">
									  <td align="center"><div>Monday, Mar-27-2014</div><div style="color:#666666; font-weight:bold;">13:00 - 13:30</div></td>
									  <td><a href="#">Rob Donovan </a> (with Sasha Newsham)</td>
									  <td><span class="label label-warning">Not confirmed</span></td>
									</tr>
									
								  </tbody>
								</table>


							</div>
						</div>
						
					<header>
				</section>
			</div>	
		</div>
	</div>
	</div>
</div>