<%- title "Calendo | " + current_account.name + " - Staff members"%>

<section>
	<header class="panel-body">
		<h3 style="margin-top:10px;"><%= current_account.name %> Staff members
			<%= link_to new_admin_staff_path(@user) do %>
				<span  class="entity-action-link"><i class="fa fa-plus"></i> Add a new staff member</span> 
			<% end %>
		</h3>						
	<header>
	<table id="service-list" class="table table-hover sorted_table">							  
		  <tbody>
		  	<% @employee_profiles.each do |employee| %>
        		<tr>				  								  
				  <td><%= link_to employee.user.display_name, edit_admin_staff_path(employee.user) %></td>
				  <td width="200"><%= employee.user.email %></td>				  
				</tr>
  			<% end %>								
		  </tbody>
	</table>
</section>


