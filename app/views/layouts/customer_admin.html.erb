<div class="row table-row">
	<div class="col-sm-3 custom">		
		<section class="panel" style="margin-top:20px;">
			<div class="panel-body" >								
				<ul class="nav nav-pills nav-stacked mail-nav" style="margin-top:10px;">
					<% if params[:action]=="show"%> 
					<li class="active">
					<% else %>
					<li>
					<% end %>
					<%= link_to admin_customer_path do %>
						<i class="fa fa-dashboard"></i> Dashboard 
					<% end %>									
					</li>
					
					<% if params[:action]=="invoices"%> 
					<li class="active">
					<% else %>
					<li>
					<% end %>
					<%= link_to admin_customer_invoices_path do %>
						<i class="fa fa-files-o"></i> Invoices <span class="label label-info pull-right inbox-notification">0</span> 
					<% end %>									
					</li>	
					
					<% if params[:action]=="activity"%> 
					<li class="active">
					<% else %>
					<li>
					<% end %>
					<%= link_to admin_customer_activity_path do %>
						<i class="fa fa-tasks"></i> Activity 
					<% end %>									
					</li>					
					
					
					<% if params[:action]=="comments"%> 
					<li class="active">
					<% else %>
					<li>
					<% end %>
					<%= link_to admin_customer_comments_path do %>
						<i class="fa fa-comments"></i> Comments <span class="label label-info pull-right inbox-notification"><%= @customer.comments.count %></span> 
					<% end %>									
					</li>				
				</ul>
			</div>
		</section>
		
	</div>
	<div class="col-sm-9">
		<%= yield %>
	</div>	
</div>
<%= parent_layout('account') %>