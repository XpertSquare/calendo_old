<%- title "Calendo | Account registration" %>
<div id="workspace" class="workspace">
	<div class="container" style="width:900px;">
		<div class="register" style="margin-bottom:50px; min-height:600px;">
			<h2>Create your Calendo account</h2>
			<hr style="margin-top:5px;"/>	
			<%= form_for @registration, :html => {:class => "form-horizontal", :role=>"form"} do |f| %>
			  <% if @registration.errors.any? %>
			    <div id="error_explanation" class="alert alert-danger">
			      <h4><%= pluralize(@registration.errors.count, "error") %> prohibited this account from being saved:</h4>
			      <ul>
			      <% @registration.errors.full_messages.each do |msg| %>
			        <li><%= msg %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>
			
			  <div class="form-group">
			  	<%= f.label :company_name, :class=>"col-sm-2 control-label" %>
			  	<div class="col-sm-3">			    
			    	<%= f.text_field :company_name,  :class=>'form-control', :placeholder=>"Your company name" %>
			    </div>
			  </div>  
			  <div class="form-group">
			  	<%= f.label :registrar_name, "Your name", :class=>"col-sm-2 control-label" %>			
			  	<div class="col-sm-3">    
			    	<%= f.text_field :registrar_name,  :class=>'form-control', :placeholder=>"Your name" %>
			    </div>
			  </div>  			  
			  <div class="form-group">	
			  	<%= f.label :registrar_email, "Your email", :class=>"col-sm-2 control-label" %>	
			  	<div class="col-sm-3">	    
			    	<%= f.email_field :registrar_email,   :class=>'form-control', :placeholder=>"Your email" %>
			   </div>
			  </div>	
			<hr style="margin-top:5px;"/>
			 <div class="col-md-12" style="margin-top:5px;">
				<span id="policy" style="margin-right:15px; font-size:12px;">By registering an account I agree with the Calendo's <a onclick="window.open(this.href); return false;" href="terms-of-service.html">Terms of Service</a> and <a onclick="window.open(this.href); return false;" href="privacy-policy.html">Privacy Policy</a></span>
				<%= f.submit 'Register my account', :class => 'btn btn-success' %>
			</div>
				
			<% end %>
		</div>
	</div>
</div>
