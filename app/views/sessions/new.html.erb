<%- title "Calendo | Login" %>
<div id="workspace" class="workspace">
	<div class="container" style="width:900px;">
		<div class="register" style="margin-bottom:50px; min-height:600px;">
			<h2>Log In</h2>
			<hr style="margin-top:5px;"/>
			<%= form_tag sessions_path, :class => "form-horizontal" do %>
			<div class="form-group">
			    <%= label_tag :email, nil, :class=> "col-sm-2 control-label" %>
			    <div class="col-sm-3">
			    	<%= text_field_tag :email, params[:email], :class=>'form-control' %>
				</div>	
			</div>
			<div class="form-group">
			    <%= label_tag :password, nil, :class=> "col-sm-2 control-label" %>
			    <div class="col-sm-3">
			    	<%= password_field_tag :password, nil,{:class=>'form-control'} %>
			    </div>	
			</div>
			<div class="form-group">
				<div class="col-sm-2"></div>
			      <label class="col-sm-3 checkbox">
			    	<%= check_box_tag :remember_me, 'yes', params[:remmeber_me] => true%> Remember me
			    	</label>
			  </div>
			  <hr style="margin-top:5px;"/>
			 <div class="col-md-12" style="margin-top:5px;">
				<div class="col-sm-2"></div>
				<%= submit_tag 'Log me in', :class => 'btn btn-success' %>
			</div>
				
			<% end %>
		</div>
	</div>
</div>
